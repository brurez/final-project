{
  "name": "app",
  "private": "true",
  "dependencies": {
    "concurrently": "^7.2.2",
    "sass": "^1.50.0",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  },
  "scripts": {
    "dev": "concurrently \"bin/rails s -p 5000\" \"cd client && yarn dev\"",
    "graphql:dump": "rails graphql:schema:dump",
    "graphql:codegen": "cd client && graphql-codegen --config codegen.yml",
    "build": "webpack --config webpack.config.js",
    "build:css": "sass ./app/assets/stylesheets/application.sass.scss ./app/assets/builds/application.css --no-source-map --load-path=node_modules"
  },
  "devDependencies": {
    "prettier": "^2.7.1"
  }
}
